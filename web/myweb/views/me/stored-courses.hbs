<div class="container">
    <div class="mt-4">
        <h1>My courses</h1>
        <table class="table">
    <thead>
        <tr>
        <th scope="col">STT</th>
        <th scope="col">Name</th>
        <th scope="col">Decription</th>
        <th scope="col">Created At</th>
        </tr>
    </thead>
    <tbody>
        {{#each course}}  
        <tr>
        <th scope="row">{{@index}}</th>
        <td>{{this.name}}</td>
        <td>{{this.description}}</td>
        <td>{{this.createdAt}}</td>
        </tr>
        {{/each}}
    </table>     
    </div>
</div>